<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:background="#FFECB3">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-dark"
            android:paddingBottom="30dp"
            android:paddingTop="50dp"
            android:text="My Nanodegree Apps!"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnLaunchSpotifyStreamer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:onClick="launchSpotifyStreamer"
            android:text="Spotify Streamer"
            android:background="#FF9800"/>

        <Button
            android:id="@+id/btnLaunchScoresApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:onClick="launchScoresApp"
            android:text="Scores App"
            android:background="#FF9800"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnLaunchLibraryApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:onClick="launchLibraryApp"
            android:text="Library App"
            android:background="#FF9800"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnLaunchBuildItBigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:onClick="launchBuildItBigger"
            android:text="Build It Bigger"
            android:background="#FF9800"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnXYZReader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:onClick="launchXYZReader"
            android:text="XYZ Reader"
            android:background="#FF9800"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnLaunchCapstone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:onClick="launchCapstone"
            android:background="#84FFFF"
            android:text="Capstone: My Own App" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>
